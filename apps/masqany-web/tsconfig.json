{
    "extends": ["@masqany/tsconfig/base.json"],
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/.server/**/*.ts",
        "**/.server/**/*.tsx",
        "**/.client/**/*.ts",
        "**/.client/**/*.tsx"
      ],
    "compilerOptions": {
        "lib": ["DOM", "DOM.Iterable", "ES2022"],
        "types": ["@remix-run/node", "vite/client"],
        "target": "ES2022",
        "baseUrl": ".",
        "paths": {
            "ui/*": ["./src/ui/*"],
            "utils/*": ["./src/utils/*"],
            "app/*": ["app/*"],
            "types/*": ["./src/types/*"],
            "core/*": ["./src/core/*"],
            "config/*": ["./src/config/*"],
        },
    // Remix takes care of building everything in `remix build`.
    "noEmit": true
    }
}
  